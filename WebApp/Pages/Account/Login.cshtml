@page
@model WebApp.Pages.Account.LoginModel
@{
}

<h3>User Login</h3>
<br>
<div class="container" style="padding: 20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All">
            
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credential.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Email" class="form-control">
                <span class="text-danger" asp-validation-for="Credential.Email"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control">
                <span class="text-danger" asp-validation-for="Credential.Password"></span>
            </div>
        </div>

        <div class="mb-3 row form-check">
            <div class="col-2">
                <input type="checkbox" class="form-check-input" asp-for="Credential.RememberMe">
                <label asp-for="Credential.RememberMe" class="form-check-label"></label>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" value="Login" class="btn btn-primary">
            </div>
            <div class="col-5">
                <a class="btn btn-link" href="/Account/Register">Sign Up</a>
            </div>
        </div>
    </form>
</div> 